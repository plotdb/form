//- module
doctype html
html
  block vars
  include @/@loadingio/bootstrap.ext/index.pug
  include @/ldview/index.pug
  head
    block prehead
    +css([
      {url: "https://fonts.googleapis.com/css?family=Roboto:300,400,700|Roboto+Mono"},
      {name: "bootstrap", path: "dist/css/bootstrap.min.css"},
      {name: "@loadingio/bootstrap.ext"},
      {name: "ldcover"},
      {name: "ldiconfont", path: "ldif.min.css"},
      {url: "css/index.css"}
    ])
    block head
  body
    block body
    +script([
      {name: "bootstrap.native", path: "dist/bootstrap-native.min.js"},
      {name: "i18next", path: "dist/umd/i18next.min.js"},
      {name: "@loadingio/debounce.js"},
      {name: "@loadingio/ldquery"},
      {name: "proxise"},
      {name: "ldcover"},
      {name: "ldview"},
      {name: "@plotdb/datadom"},
      {name: "@plotdb/semver"},
      {name: "@plotdb/csscope"},
      {name: "@plotdb/rescope"},
      {name: "@plotdb/block"},
      {name: "@plotdb/form" , version: "dev"}
    ])
    block script
